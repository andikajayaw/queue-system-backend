generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  name      String
  password  String
  role      Role     @default(STAFF)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  lastLoginAt   DateTime? // Tambahkan ini
  lastLogoutAt  DateTime? // Tambahkan ini

  servedQueues Queue[] @relation("ServedBy")

  @@map("users")
}

model Queue {
  id              String      @id @default(cuid())
  queueNumber     String
  queueDate       DateTime    @default(now())

  type            QueueType
  status          QueueStatus @default(WAITING)
  customerName    String?
  phoneNumber     String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  calledAt        DateTime?
  completedAt     DateTime?
  
  servedById      String?
  servedBy        User?       @relation("ServedBy", fields: [servedById], references: [id])
  
  serviceStartedAt DateTime?
  serviceDuration Int?

  @@unique([queueNumber, queueDate])
  @@map("queues")
}

enum Role {
  ADMIN
  STAFF
}

enum QueueType {
  RESERVATION
  WALK_IN
}

enum QueueStatus {
  WAITING
  CALLED
  SERVING
  COMPLETED
  CANCELLED
}